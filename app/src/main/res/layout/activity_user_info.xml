<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_black"
    tools:context="com.zhangteng.xim.activity.UserInfoActivity">

    <com.zhangteng.xim.widget.TitleBar
        android:id="@+id/userinfo_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:leftButtonBg="@mipmap/back"
        app:titleText="个人信息" />

    <TextView
        android:id="@+id/userinfo_avatar"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginTop="@dimen/common_leftorright_padding"
        android:background="@color/background"
        android:gravity="center_vertical"
        android:onClick="buttonClick"
        android:paddingEnd="@dimen/common_leftorright_padding"
        android:paddingStart="@dimen/common_leftorright_padding"
        android:text="头像"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/userinfo_iv_avatar"
        app:layout_constraintTop_toBottomOf="@id/userinfo_titlebar" />

    <ImageView
        android:id="@+id/userinfo_iv_avatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="@dimen/common_leftorright_padding"
        android:background="@color/background"
        android:onClick="buttonClick"
        android:padding="@dimen/common_leftorright_padding"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toRightOf="@id/userinfo_avatar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userinfo_titlebar" />

    <TextView
        android:id="@+id/userinfo_username"
        android:layout_width="0dp"
        android:layout_height="@dimen/titlebar_height"
        android:layout_marginTop="0.5dp"
        android:background="@color/background"
        android:gravity="center_vertical"
        android:onClick="buttonClick"
        android:paddingEnd="@dimen/common_leftorright_padding"
        android:paddingStart="@dimen/common_leftorright_padding"
        android:text="昵称"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/userinfo_tv_username"
        app:layout_constraintTop_toBottomOf="@id/userinfo_avatar" />

    <TextView
        android:id="@+id/userinfo_tv_username"
        android:layout_width="0dp"
        android:layout_height="@dimen/titlebar_height"
        android:layout_marginTop="0.5dp"
        android:background="@color/background"
        android:gravity="center_vertical|right"
        android:onClick="buttonClick"
        android:paddingEnd="@dimen/common_leftorright_padding"
        android:paddingStart="@dimen/common_leftorright_padding"
        android:text="昵称"
        android:textColor="@color/default_text_grey_color"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/userinfo_username"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userinfo_avatar" />

    <TextView
        android:id="@+id/userinfo_objectid"
        android:layout_width="0dp"
        android:layout_height="@dimen/titlebar_height"
        android:layout_marginTop="0.5dp"
        android:background="@color/background"
        android:gravity="center_vertical"
        android:onClick="buttonClick"
        android:paddingEnd="@dimen/common_leftorright_padding"
        android:paddingStart="@dimen/common_leftorright_padding"
        android:text="XIM号"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/userinfo_tv_objectid"
        app:layout_constraintTop_toBottomOf="@id/userinfo_username" />

    <TextView
        android:id="@+id/userinfo_tv_objectid"
        android:layout_width="0dp"
        android:layout_height="@dimen/titlebar_height"
        android:layout_marginTop="0.5dp"
        android:background="@color/background"
        android:gravity="center_vertical|right"
        android:onClick="buttonClick"
        android:paddingEnd="@dimen/common_leftorright_padding"
        android:paddingStart="@dimen/common_leftorright_padding"
        android:text="XIM号"
        android:textColor="@color/default_text_grey_color"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/userinfo_objectid"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userinfo_username" />

    <TextView
        android:id="@+id/userinfo_sex"
        android:layout_width="0dp"
        android:layout_height="@dimen/titlebar_height"
        android:layout_marginTop="@dimen/common_leftorright_padding"
        android:background="@color/background"
        android:gravity="center_vertical"
        android:onClick="buttonClick"
        android:paddingEnd="@dimen/common_leftorright_padding"
        android:paddingStart="@dimen/common_leftorright_padding"
        android:text="性别"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/userinfo_tv_sex"
        app:layout_constraintTop_toBottomOf="@id/userinfo_objectid" />

    <TextView
        android:id="@+id/userinfo_tv_sex"
        android:layout_width="0dp"
        android:layout_height="@dimen/titlebar_height"
        android:layout_marginTop="@dimen/common_leftorright_padding"
        android:background="@color/background"
        android:gravity="center_vertical|right"
        android:onClick="buttonClick"
        android:paddingEnd="@dimen/common_leftorright_padding"
        android:paddingStart="@dimen/common_leftorright_padding"
        android:text="性别"
        android:textColor="@color/default_text_grey_color"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/userinfo_sex"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userinfo_objectid" />

    <TextView
        android:id="@+id/userinfo_area"
        android:layout_width="90dp"
        android:layout_height="@dimen/titlebar_height"
        android:layout_marginTop="0.5dp"
        android:background="@color/background"
        android:gravity="center_vertical"
        android:onClick="buttonClick"
        android:paddingEnd="@dimen/common_leftorright_padding"
        android:paddingStart="@dimen/common_leftorright_padding"
        android:text="地区"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/userinfo_tv_area"
        app:layout_constraintTop_toBottomOf="@id/userinfo_sex" />

    <TextView
        android:id="@+id/userinfo_tv_area"
        android:layout_width="0dp"
        android:layout_height="@dimen/titlebar_height"
        android:layout_marginTop="0.5dp"
        android:background="@color/background"
        android:ellipsize="end"
        android:gravity="center_vertical|right"
        android:onClick="buttonClick"
        android:paddingEnd="@dimen/common_leftorright_padding"
        android:paddingStart="@dimen/common_leftorright_padding"
        android:singleLine="true"
        android:text="地区"
        android:textColor="@color/default_text_grey_color"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/userinfo_area"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userinfo_sex" />

    <TextView
        android:id="@+id/userinfo_state"
        android:layout_width="0dp"
        android:layout_height="@dimen/titlebar_height"
        android:layout_marginTop="0.5dp"
        android:background="@color/background"
        android:gravity="center_vertical"
        android:onClick="buttonClick"
        android:paddingEnd="@dimen/common_leftorright_padding"
        android:paddingStart="@dimen/common_leftorright_padding"
        android:text="签名"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userinfo_area" />


</android.support.constraint.ConstraintLayout>
